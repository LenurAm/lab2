@model IEnumerable<Purchase>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black">Purchases List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Purchase" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create Purchases
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style=" width:100%">
    <thead>
        <tr>
           @* <th>
                User Id
            </th>*@
            <th>
                Purchase Number
            </th>
            <th>
                Supplier Id
            </th>
            <th>
               Invoice Number
            </th>
            <th>
                Cost
            </th>
            <th>
                Date
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
               @* <td width="20%">
                    @obj.UserId
                </td>*@
                <td width="30%">
                    @obj.PurchaseNumber
                </td>
                <td width="30%">
                    @obj.SupplierId
                </td>
                <td width="50%">
                    @obj.InvoiceNumber
                </td>
                <td width="30%">
                    @obj.Cost
                </td>
                <td width="20%">
                    @obj.CreateDateTime
                </td>
                @*<td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Purchase" asp-action="Edit" asp-route-id="@obj.PurchaseNumber"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i>Edit</a>
                    </div>
                </td>*@
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Purchase" asp-action="Delete" asp-route-id="@obj.PurchaseNumber"
                        class="btn btn-primary mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
